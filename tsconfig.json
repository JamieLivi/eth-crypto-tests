{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*spec.ts", "**/*test.ts", "/test", "/tests", "test", "**/*__mocks__/*"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "importHelpers": true
  }
}
